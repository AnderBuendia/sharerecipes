{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@Modules/*": ["src/modules/*"],
      "@Shared/*": ["src/shared/*"]
    }
  },
  "include": ["src/**/*.ts", "spec/**/*.ts"]
}
