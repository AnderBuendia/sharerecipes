{
  "name": "sharerecipes",
  "private": true,
  "version": "1.1.0",
  "description": "Share your recipes with other people",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:server": "npm run dev --workspace=server",
    "start:frontend": "npm run start --workspace=frontend",
    "start:server": "npm run start --workspace=server",
    "lint": "npm run lint",
    "test:server": "npm run test --workspace=server"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "awilix": "7.0.3",
    "graphql": "16.5.0",
    "jsonwebtoken": "8.5.1"
  },
  "devDependencies": {
    "@types/jest": "27.5.1",
    "@types/jsonwebtoken": "8.5.8",
    "@types/node": "17.0.35",
    "eslint": "8.16.0",
    "husky": "8.0.1",
    "jest": "28.1.0",
    "standard": "17.0.0",
    "ts-jest": "28.0.3",
    "typescript": "4.6.4"
  },
  "eslintConfig": {
    "extends": "./node_modules/standard/eslintrc.json",
    "rules": {
      "semi": 0,
      "trailingComma": "none"
    },
    "env": {
      "jest": true
    }
  }
}
